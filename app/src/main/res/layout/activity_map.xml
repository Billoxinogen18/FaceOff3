<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView_AMap_map"
        android:layout_width="378dp"
        android:layout_height="332dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_AMap_searchBar"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="123 Fake St., Boulder, CO"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_AMap_warning" />

    <TextView
        android:id="@+id/textView_AMap_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Warning! Your destination is near a COVID-19 hotspot."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapView_AMap_map" />

    <ImageButton
        android:id="@+id/imageButton_AMap_search"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/editText_AMap_searchBar"
        app:layout_constraintTop_toBottomOf="@+id/textView_AMap_warning"
        app:srcCompat="@drawable/search" />
</androidx.constraintlayout.widget.ConstraintLayout>