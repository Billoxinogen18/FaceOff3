<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_AS_pairTracker"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_marginTop="64dp"
        android:text="Pair New FaceOff Tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_AHS_imgFaceOff" />

    <ImageView
        android:id="@+id/imageView_AHS_imgFaceOff"
        android:layout_width="172dp"
        android:layout_height="84dp"
        android:src="@drawable/faceoff_logo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_AS_userPrivacy"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="User Privacy amp Sharing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_AS_pairTracker" />

    <Button
        android:id="@+id/button_AS_help"
        android:layout_width="259dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Help amp Troubleshooting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_AS_userPrivacy" />

    <Button
        android:id="@+id/button_AS_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_AS_help" />

    <TextView
        android:id="@+id/textView_AS_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Copyright 2020, Maet Inc."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_AS_logOut" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_AS_copyright" />

    <ImageButton
        android:id="@+id/imageButton_AS_informativeTab"
        android:layout_width="57dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/facetouch_hand"
        android:scaleType="fitCenter"
        android:padding="2dp"/>

    <ImageButton
        android:id="@+id/imageButton_AS_maps"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:layout_marginStart="76dp"
        android:padding="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toEndOf="@+id/imageButton_AS_informativeTab"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintVertical_bias="0.037"
        app:srcCompat="@drawable/map" />

    <ImageButton
        android:id="@+id/imageButton_AS_settings"
        android:layout_width="51dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toEndOf="@+id/imageButton_AS_maps"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintVertical_bias="0.037"
        app:srcCompat="@drawable/settings_gear"
        android:scaleType="fitCenter"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/textView_AS_helloMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, User!"
        app:layout_constraintBottom_toTopOf="@+id/button_AS_pairTracker"
        app:layout_constraintEnd_toStartOf="@+id/imageView_AHS_imgFaceOff"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />
</androidx.constraintlayout.widget.ConstraintLayout>